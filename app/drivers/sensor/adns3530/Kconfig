menuconfig ADNS3530
	bool "ADNS3530 Mouse Sensor"
	default y
	depends on DT_HAS_AVAGO_ADNS3530_ENABLED
	depends on SPI
	help
	  Enable mouse sensor

		The ADNS3530 is a 8-bit optical mouse sensor

if ADNS3530

choice
	prompt "Trigger mode"
	default ADNS3530_TRIGGER_NONE
	help
	  Specify the type of triggering to be used by the driver.

config ADNS3530_TRIGGER_NONE
	bool "No trigger"

config ADNS3530_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select ADNS3530_TRIGGER

config ADNS3530_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select ADNS3530_TRIGGER

endchoice

config ADNS3530_TRIGGER
	bool

config ADNS3530_THREAD_PRIORITY
	int "Thread priority"
	depends on ADNS3530_TRIGGER_OWN_THREAD
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config ADNS3530_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on ADNS3530_TRIGGER_OWN_THREAD
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

endif # ADNS3530
